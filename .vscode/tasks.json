{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "prebuild",
      "command": "clang",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.o"
